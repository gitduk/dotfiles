% podman, generate

# regist server
$ name: podman container list --all --format json | jq ".[] | .Names[]"
$ policy: echo "always|unless-stopped|on-failure" | tr "|" "\n"
podman generate systemd \
  --name <name> \
  --restart-policy <policy> \
  --files

% podman, run
@ envs

# postgresql
mkdir -p ~/.postgres
podman run -d --name postgres \
  -e POSTGRES_USER=postgres \
  -e POSTGRES_PASSWORD=changeme \
  -e PGDATA=/var/lib/postgresql/data/pgdata \
  -p 5432:5432 \
  -v postgres:/var/lib/postgresql/data \
  --restart=unless-stopped \
  postgres:latest

# stirling-pdf
podman run -d --name stirling-pdf \
  -e DOCKER_ENABLE_SECURITY=false \
  -e INSTALL_BOOK_AND_ADVANCED_HTML_OPS=false \
  -e LANGS=en_GB \
  -p 7000:8080 \
  -v ./trainingData:/usr/share/tessdata \
  -v ./extraConfigs:/configs \
  -v ./logs:/logs \
  -v ./customFiles:/customFiles \
  --restart=unless-stopped \
  frooodle/s-pdf:latest

# pairdrop
podman run -d --name pairdrop \
  -e PUID=1000 \
  -e PGID=1000 \
  -e WS_SERVER=false \
  -e WS_FALLBACK=false \
  -e RTC_CONFIG=false \
  -e RATE_LIMIT=false \
  -e DEBUG_MODE=false \
  -e TZ=Etc/UTC \
  -p 0.0.0.0:3000:3000 \
  --restart=unless-stopped \
  lscr.io/linuxserver/pairdrop 

# uptime-kuma
mkdir -p ~/.uptime-kuma
podman run -d --name uptime-kuma \
  -e HTTP_PROXY=http://127.0.0.1:7890 \
  -e HTTPS_PROXY=http://127.0.0.1:7890 \
  -v ~/.uptime-kuma:/app/data \
  --network=host \
  --restart=unless-stopped \
  louislam/uptime-kuma:1

# beszel: a lightweight server monitoring
mkdir -p ~/.beszel_data
podman run -d --name beszel \
  -p 8090:8090 \
  -v ~/.beszel_data:/beszel_data \
  --restart=unless-stopped \
  docker.io/henrygd/beszel

# mazanoke: A self-hosted local image optimizer that runs in your browser.
podman run -d --name mazanoke \
  -p 7374:80 \
  --restart=unless-stopped \
  ghcr.io/civilblur/mazanoke:latest

# attu milvus webui
podman run -d --name attu \
  -e MILVUS_URL=<hosts>:19530 \
  -p 5000:3000 \
  --restart=always \
  zilliz/attu:latest

# open-webui
podman run -d --name open-webui \
  -p 3000:8080 \
  -v open-webui:/app/backend/data \
  --restart=always \
  ghcr.io/open-webui/open-webui:main

# prometheus
podman run -d --name prometheus \
  -p 127.0.0.1:9090:9090 \
  --restart=always \
  prom/prometheus

# redis
podman run -d --name redis \
  -p 6379:6379 \
  redis:latest

# new-api
podman run -d --name new-api \
  -e TZ=Asia/Shanghai \
  -v ./data:/data \
  --network=host \
  --restart=always \
  calciumion/new-api:latest

# gemini-balance
podman run -d --name gemini-balance \
  -p 8000:8000 \
  -v ./data:/app/data \
  --env-file .env \
  ghcr.io/snailyp/gemini-balance:latest


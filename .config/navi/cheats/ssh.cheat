% ssh
@ envs

# local port forwarding: local → remote server 
ssh -NL <port>:<host>:<port> <host>

# remote port forwarding: remote server → local
ssh -NR <port>:localhost:<port> <host>

# fix ssh dir permission
sudo chmod 750 $HOME/
sudo chmod 700 $HOME/.ssh
sudo chmod 600 $HOME/.ssh/config
sudo chmod 600 $HOME/.ssh/authorized_keys
sudo chmod 600 $HOME/.ssh/id_rsa
sudo chmod 644 $HOME/.ssh/id_rsa.pub


% nala

# install nala
sudo apt-get install -y nala

# apt-fast
sudo apt-get install -y software-properties-common
sudo add-apt-repository ppa:apt-fast/stable
sudo apt-get install -y aptitude
sudo apt-get install -y apt-fast

# typora
wget -qO - https://typoraio.cn/linux/public-key.asc | sudo apt-key add -
sudo add-apt-repository 'deb https://typoraio.cn/linux ./'
sudo nala install -y typora

# auto lock screen of xserver
sudo nala install -y xautolock

# x clipboard
sudo nala install -y xsel xclip

# for android devices
sudo nala install -y jmtpfs

# send maill
sudo nala install -y s-nail

# x tools
sudo nala install -y xdotool xrandr

# for make
sudo nala install -y automake build-essential cmake

# copy with progress bar
sudo nala install -y pv
 
# counter
sudo nala install -y bc

# another copy command
sudo nala install -y rsync

# rg command
sudo nala install -y ripgrep

# ag command
sudo nala install -y silversearcher-ag

# nc command
sudo nala install -y netcat

# fd command
sudo nala install -y fd-find

# for screencut

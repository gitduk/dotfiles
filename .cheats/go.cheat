% go, install

# install golang-1.21.0
aria2c -c "https://dl.google.com/go/go1.21.0.linux-amd64.tar.gz" -d /tmp
sudo rm -rf "$GOROOT" && sudo tar -C "${GOROOT%/*}" -xzf /tmp/go1.21.0.linux-amd64.tar.gz 

# lf: terminal file manager
env CGO_ENABLED=0 go install -ldflags="-s -w" github.com/gokcehan/lf@latest
mkdir -p ~/.config/lf && curl "https://raw.githubusercontent.com/gokcehan/lf/master/etc/lfrc.example" -o ~/.config/lf/lfrc

